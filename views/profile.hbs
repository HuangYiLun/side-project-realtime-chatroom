<div class="container overflow-auto h-100">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card shadow">
        <div class="card-header bg-dark text-white">
          <h4>Your Profile</h4>
        </div>
        <div class="card-body bg-dark">
          <form class="needs-validation" id="form" action="">
            <div class="mb-3">
              <div class="profile-img-block text-center">
                <img
                  class="avatar-img profile-user-img rounded-circle"
                  src="{{avatar}}"
                  id="user-avatar"
                  onerror="this.src='https://i.imgur.com/VUhtTKV.png'"
                  alt="User Avatar"
                />
                <div class="avatar">
                  <label class="form-label" for="avatar">
                    <i class="fa-solid fa-camera"></i>
                  </label>
                  <input
                    class="form-control"
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                  />
                </div>
              </div>
            </div>

            <div class="mb-3">
              <label
                class="form-label text-white"
                for="name"
              >Username</label>
              <input
                class="form-control rounded-4"
                type="text"
                name="name"
                id="name"
                placeholder="Enter your username"
                value="{{name}}"
                maxlength="20"
              />
              <div class="invalid-feedback">字數超過上限 !</div>
              <div class="input-minmax"></div>
            </div>

            <div class="mb-3">
              <label
                for="email"
                class="form-label text-white"
              >Email</label>
              <input
                class="form-control rounded-4"
                type="email"
                name="email"
                id="email"
                placeholder="Enter your email"
                value="{{email}}"
              />
              <div class="invalid-feedback">請輸入信箱地址</div>
            </div>

            <div class="mb-3">
              <label class="form-label text-white" for="password">New Password</label>
              <input
                class="form-control rounded-4"
                type="text"
                id="password"
                name="password"
                minlength="8"
                maxlength="12"
              />
              <div class="invalid-feedback">請設定8~12位密碼</div>
              <div class="input-minmax"></div>
            </div>

            <div class="mb-3">
              <label class="form-label text-white" for="confirmPassword">Confirm
                Password</label>
              <input
                class="form-control rounded-4"
                type="password"
                id="confirmPassword"
                name="confirmPassword"
              />
              <div class="invalid-feedback">密碼不一致</div>
            </div>

            <div class="mb-3">
              <label
                class="form-label text-white"
                for="introduction"
              >Introduction</label>
              <textarea
                class="form-control rounded-4"
                id="introduction"
                name="introduction"
                rows="3"
                maxlength="161"
                placeholder="Tell us about yourself"
              >{{introduction}}
              </textarea>
              <div class="invalid-feedback">字數超過上限 !</div>
              <div class="input-minmax"></div>
            </div>

            <div class="d-flex justify-content-center">
              <button
                class="profile-edit-button rounded-pill p-3"
                type="submit"
                id="btn-submit"
              >Save Changes
              </button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="module" src="/javascripts/profile.js"></script>