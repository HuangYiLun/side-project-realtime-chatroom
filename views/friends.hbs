<div class="container h-100">
  <div class="friends h-100">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link {{#if isFriends}}active{{/if}}" href="/friends">Friends</a>
      </li>
      <li class="nav-item">
        <a class="nav-link  {{#if isSendInvitation}}active{{/if}}" href="/friends?type=sent">Sent
          Invitations</a>
      </li>
      <li class="nav-item">
        <a class="nav-link  {{#if isReceivedInvitation}}active{{/if}}" href="/friends?type=received">Received
          Invitations</a>
      </li>
    </ul>

    <!-- 朋友列表 -->
    <div class="content mt-2">
      {{#if isFriends}}<h5 class="text-white">人數:{{users.length}}位</h5>{{/if}}
      {{#if isSendInvitation}}<h5 class="text-white">人數:{{users.length}}位</h5>{{/if}}
      {{#if isReceivedInvitation}}<h5 class="text-white">人數:{{users.length}}位</h5>{{/if}}

      <ul class="friends-list">
        <!-- 在這裡顯示朋友列表的內容 -->
        {{#each users}}
        <li class="list-item d-flex align-items-center justify-content-between" data-id="{{this._id}}" data-name="
          {{this.name}}" data-avatar="{{this.avatar}}" data-introduction="{{this.introduction}}">
          <div class="user-avatar">
            <img class="user-avatar-img" src="{{this.avatar}}" data-bs-toggle="modal" data-bs-target="#show-modal"
              onerror="this.src=' https://i.imgur.com/VUhtTKV.png'">
          </div>

          <div class="user-name">
            <h4 class="user-name-h4" data-bs-toggle="modal" data-bs-target="#show-modal">{{this.name}}
            </h4>
          </div>

          <div class="friend-btn">
            {{#if ../isFriends}}
            <button class="btn btn-outline-info rounded-circle message-btn">
              <a class="d-flex justify-content-center"  href="/chatroom/private/{{this._id}}">
                <svg xmlns="http://www.w3.org/2000/svg" height="20" width="20" viewBox="0 0 512 512">
                  <path d="M512 240c0 114.9-114.6 208-256 208c-37.1 0-72.3-6.4-104.1-17.9c-11.9 8.7-31.3 20.6-54.3 30.6C73.6 471.1 44.7 480 16 480c-6.5 0-12.3-3.9-14.8-9.9c-2.5-6-1.1-12.8 3.4-17.4l0 0 0 0 0 0 0 0 .3-.3c.3-.3 .7-.7 1.3-1.4c1.1-1.2 2.8-3.1 4.9-5.7c4.1-5 9.6-12.4 15.2-21.6c10-16.6 19.5-38.4 21.4-62.9C17.7 326.8 0 285.1 0 240C0 125.1 114.6 32 256 32s256 93.1 256 208z"/
                ></svg>
              </a>
            </button>

            <form action="/friends/{{this._id}}/remove?_method=PUT" method="POST">
              <button class="btn btn-outline-warning remove-friend-btn">
                Remove
              </button>
            </form>
            {{/if}}

            {{#if ../isSendInvitation}}
            <form action="/friends/{{this._id}}/cancel?_method=PUT" method="POST">
              <button type="submit" class="btn btn-outline-warning cancel-friend-btn">
                Cancel
              </button>
            </form>
            {{/if}}

            {{#if ../isReceivedInvitation}}
            <button class="btn btn-outline-success accept-friend-btn" data-friend-id="{{this._id}}" data-friend-name="{{this.name}}" data-user-id="{{loginUser._id}}" data-user-name="{{loginUser.name}}">
                Accept
            </button>
            <form action="/friends/{{this._id}}/reject?_method=PUT" method="POST">
              <button class="btn btn-outline-warning reject-friend-btn">
                Reject
              </button>
            </form>
            {{/if}}

          </div>
        </li>
        {{/each}}
      </ul>
    </div>

  </div>
</div>


{{> modal/modal-show}}

<script type="module" src="/javascripts/friends.js" defer></script>